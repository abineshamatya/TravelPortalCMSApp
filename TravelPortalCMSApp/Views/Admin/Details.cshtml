@model TravelPortalCMSApp.Models.PackagesModel

@{
    ViewBag.Title = "EditPackages";
    //Int64 ImageID = Model.ImageID;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customize & add the packages.
        @*<small>Optional description</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Package</h3>
                </div>
                <!-- /.box-header -->
                <section id="editPackage">
                    <div class="box-body">
                        <!-- form start -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal">
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.PackageID)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.PackageName, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.PackageName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PackageName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Cost, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Cost, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Cost, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <fieldset>
                                        @Html.LabelFor(m => m.Destination, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.Destination,
                                              new List<SelectListItem>
                                               {
                                                        //new SelectListItem { Value = "0" , Text = "-----  Select  -----",                                   Selected  = true},
                                                        new SelectListItem { Value = "London" , Text = "London" },
                                                        new SelectListItem { Value = "Germany" , Text = "Germany" },
                                                        new SelectListItem { Value = "Nepal" , Text = "Nepal" },
                                                        new SelectListItem { Value = "Maldives" , Text = "Maldives" },
                                              }, "------Please Select a Destination------",
                                              new { @class = "form-control", @id = "Destination" })
                                            @Html.ValidationMessageFor(m => m.Destination, "", new { @class = "text-danger" })
                                        </div>
                                    </fieldset>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Days, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Days, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Days, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(m => m.Description, new
                                   {
                                       @id = "Description",
                                       maxlength = 5000,
                                       style = "width: 420px; height: 160px;"
                                   })
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <input type="submit" value="Save" class="btn btn-primary " id="UpdatePackages"/>
                                    <input type="button" id="btn" class="btn btn-primary" value="Edit Image"/>
                                    <div style="padding-left: 358px;">
                                        @Html.ActionLink("Back to List", "EditIndex")        
                                    </div>
                                </div>
                        </div>
                        }
                    </div>
                </section>
            </div><!-- /.box -->
        </div>
        <div class="col-md-6">
            @{Html.RenderPartial("EditImages", Model.Image);}
        </div>
    </div>
</section><!-- /.content -->
