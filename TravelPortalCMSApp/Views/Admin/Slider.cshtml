@model TravelPortalCMSApp.Models.Slider
@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Slider</h2>
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customize & add the packages.
        @*<small>Optional description</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Slider</a></li>
        <li class="active">Here</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Slider</h3>
                </div>
                <!-- /.box-header -->
                <section id="loginForm">
                    <div class="box-body">
                        <!-- form start -->
                       
                          <form method="post" enctype="multipart/form-data" id="AddSliderForm" role="form" class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @id = "Name", placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            
                            <div class="form-group">
                                @Html.LabelFor(m => m.Cost, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", placeholder = "Cost", @id = "Cost" })
                                    @Html.ValidationMessageFor(m => m.Cost, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            
                            
                            <div class="form-group">
                                @Html.Label("Photo", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">

                                    <input type="file" id="Image_ID" name="upload" required="required" accept="image/*" />
                                    @*@Html.ValidationMessage("", new { @class = "text-danger" })*@
                                </div>
                            </div>
                            <!-- #messages is where the messages are placed inside -->
                              <div class="form-group">
                                  <div class="col-md-9 col-md-offset-3">
                                      <div id="messages" style="color:green"></div>
                                  </div>
                              </div>
                            <div class="box-footer">
                                <button type="submit" value="AddSlider" class="btn btn-primary " id="AddSlider">Add Slider</button>
                            </div>
                        </form>
                    </div>

                </section>

            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->

