@using TravelPortalCMSApp.Models
@model PackagesModel
@{
    ViewBag.Title = "Packages";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customize & add the packages.
        @*<small>Optional description</small>*@
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Package Description</h3>
                </div>
            <!-- /.box-header -->
                <section id="loginForm">
                    <div class="box-body">
                        <!-- form start -->
                        <form method="post" enctype = "multipart/form-data" id="AddPackageForm" role="form" class="form-horizontal">
                          
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.PackageName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.PackageName, new { @class = "form-control", @id = "PackageName", placeholder = "Name" })
                                    @Html.ValidationMessageFor(m => m.PackageName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <fieldset>
                                    @Html.LabelFor(m => m.Destination, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.DropDownListFor(model => model.Destination,
                                                  new List<SelectListItem>
                                                    {
                                                        //new SelectListItem { Value = "0" , Text = "-----  Select  -----",                                   Selected  = true},
                                                        new SelectListItem { Value = "London" , Text = "London" },
                                                        new SelectListItem { Value = "Germany" , Text = "Germany" },
                                                        new SelectListItem { Value = "Nepal" , Text = "Nepal" },
                                                        new SelectListItem { Value = "Maldives" , Text = "Maldives" },
                                                    }, "------Please Select a Destination------",
                                               new { @class = "form-control", @id = "Destination" })
                                        @Html.ValidationMessageFor(m => m.Destination, "", new { @class = "text-danger" })
                                    </div>
                                </fieldset>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Type, new { @class = "form-control", placeholder = "Type", @id = "Type" })
                                    @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Cost, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Cost, new { @class = "form-control", placeholder = "Cost", @id = "Cost" })
                                    @Html.ValidationMessageFor(m => m.Cost, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Days, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Days, new { @class = "form-control", placeholder = "Days", @id="Days" })
                                    @Html.ValidationMessageFor(m => m.Days, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextAreaFor(m => m.Description, new {@id="Description",
                                   maxlength = 5000, style = "width: 420px; height: 160px;"})
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.Label("Photo", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                   
                                    <input type="file" id="Image_ID" name="upload" required="required" accept="image/*" />
                                    @*@Html.ValidationMessage("", new { @class = "text-danger" })*@
                                </div>
                            </div>
                                    <!-- #messages is where the messages are placed inside -->
                            <div class="form-group">
                                <div class="col-md-9 col-md-offset-3">
                                    <div id="messages"></div>
                                </div>
                            </div>
                                    <div class="box-footer">
                                        <button type="submit" value="AddPackages" class="btn btn-primary " id="AddPackages">Add Package</button>
                                    </div>
                        </form>
                    </div>

                </section>

                   </div><!-- /.box -->
       </div>
  </div>
</section><!-- /.content -->


