    <div class="slider_wrapper">
        <div id="camera_wrap" class="">
            @foreach (var item in sliderlist.OrderByDescending(x => x.sliderID).Take(3))
            {
                var imgsrc = @Url.Content("~/images/" + item.ImageUrl + "");
                <div data-src="@imgsrc">
                    <div class="caption fadeIn">
                        <h2>@item.Title</h2>
                        <div class="price">
                            FROM
                            <span>$@item.Cost</span>
                        </div>
                        <a href="#">LEARN MORE</a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!--==============================Content=================================-->
    <div class="content">
        <div class="container_12">
            @foreach (var item in bannerlist.OrderByDescending(x=>x.bannerID).Take(3))
            {
                <div class="grid_4">
                    <div class="banner">
                        <img src="@Url.Content("~/images/"+@item.ImageUrl+"")" alt="">
                        <div class="label">
                            <div class="title">@item.Title</div>
                            <div class="price">FROM<span>$ @item.Cost</span></div>
                            <a href="#">LEARN MORE</a>
                        </div>
                    </div>
                </div>
            }
            <div class="clear"></div>
            <div class="grid_6">
                <h3>Booking Form</h3>
                <form id="bookingForm">
                    <div class="fl1">
                        <div class="tmInput">
